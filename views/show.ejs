<% include partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header"><%=blogid.title%></div>
		<div class="ui top attached">
			<div class="item">
				<img class= "ui centered rounded image" src= "<%=blogid.image%>">
					<div class="content">
						<span><%=blogid.created.toDateString()%></span>			
					</div>
					<div class="description">
						<p><%-blogid.text%></p>	
					</div>
					<a class="ui blue basic button" href="/blogs/<%= blogid._id %>/edit">Edit</a>	
					<form id="delete" action="/blogs/<%= blogid._id %>?_method=DELETE" method="POST">
						<button class="ui red basic button">Delete</button>
					</form>
			</div>		
		</div>
			
</div>

<% include partials/footer %>